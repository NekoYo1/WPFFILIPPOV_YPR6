<Page x:Class="WPFFILIPPOV_YPR6.Page2"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WPFFILIPPOV_YPR6"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Page2">

    <Grid Background="#FFD0B296">
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="5*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <TextBlock Grid.ColumnSpan="3" Background="#FF545454"></TextBlock>
        <TextBlock Grid.Column="1" Text="Auth" HorizontalAlignment="Center" Padding="20" FontSize="32" />
        <Image Grid.Row="0"  Source="Res/1.png" Width="60" Height="60" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10"/>
        <Button Grid.Column="3" Width="50" Height="50" HorizontalAlignment="Right"  Margin="10" Background="{x:Null}" BorderBrush="{x:Null}" Click="Button_Click">
            <Image x:Name="Close" Source="Res/2.png" />
        </Button>
        <TextBlock Grid.Row="0" Text="User"  Padding="16" FontSize="32" Margin="50,0,0,0" />
        <TextBlock Grid.Row="1" Grid.ColumnSpan="3" Text="User Page" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="36"/>

    </Grid>
</Page>
